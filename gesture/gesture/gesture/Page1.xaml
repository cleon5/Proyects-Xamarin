<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gesture.Page1">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" Padding="10" >
            <Label Text="Has dado click en alguna de las imagenes, desliza hacia abajo"
                HorizontalOptions="CenterAndExpand" FontSize="24" Padding="20"/>
            <Image Source="icono.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>